<UserControl x:Class="RestaurantMenu.UserControlDishes"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RestaurantMenu"
             mc:Ignorable="d" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             d:DesignHeight="300" Width="auto">
    <Grid>
		<materialDesign:TransitioningContent x:Name="TransitioningContentSlide" OpeningEffect="{materialDesign:TransitionEffect SlideInFromLeft, Duration=0:0:0.8}">

			<StackPanel Orientation="Horizontal" VerticalAlignment="Bottom">
				<StackPanel>
					<TextBlock Text="Apenas" FontFamily="Century Gothic" Foreground="#ffc00000"/>
					<StackPanel>
						<TextBlock Text=""/>
					</StackPanel>
					<Button/>
				</StackPanel>
				<Image Margin="10" Width="200" Height="200"/>
			</StackPanel>
		</materialDesign:TransitioningContent>
	</Grid>
</UserControl>
